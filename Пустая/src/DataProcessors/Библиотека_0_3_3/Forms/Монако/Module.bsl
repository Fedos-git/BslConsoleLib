Функция ОпределитьПеременныеПоТекстуМодуля(укТекстМодуля)
	
	Результат = Новый Массив;
	
	ЧислоСтрок = СтрЧислоСтрок(укТекстМодуля);
	Для НомерСтроки = 1 По ЧислоСтрок Цикл
		
		Строка = СтрПолучитьСтроку(укТекстМодуля, НомерСтроки);
		ПозицияПрисваивания = СтрНайти(Строка, "=");
		Если ПозицияПрисваивания > 0 Тогда
			НачалоСтроки = СокрЛП(Лев(Строка, ПозицияПрисваивания - 1));
			Слова = СтрРазделить(НачалоСтроки, " ", Ложь);
			Если Слова.Количество() > 0 Тогда
				ВозможноПеременная = СокрЛП(Слова[Слова.ВГраница()]);
				Если СтрРазделить(ВозможноПеременная, ".""()[]", Истина).Количество() = 1 Тогда
					
					Если Результат.Найти(ВозможноПеременная) = Неопределено Тогда
						//@skip-check empty-except-statement
						Попытка
							//@skip-check module-unused-local-variable
							_ = Новый Структура(ВозможноПеременная);
							Результат.Добавить(ВозможноПеременная);	
						Исключение
						КонецПопытки;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;  	
	КонецЦикла;
	
	Возврат Результат;
	
